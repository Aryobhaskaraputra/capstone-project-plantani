<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/base_radius"/>
            <padding android:left="@dimen/base_padding"/>
            <padding android:top="@dimen/base_padding"/>
            <padding android:right="@dimen/base_padding"/>
            <padding android:bottom="@dimen/base_padding"/>
            <stroke android:width="2dp" android:color="?android:attr/colorPrimary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/base_radius"/>
